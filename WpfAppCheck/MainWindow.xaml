<Window x:Class="WpfAppCheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppCheck" d:DataContext="{d:DesignInstance Type=local:PersonModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">

 <Window.DataContext>
  <local:PersonModel/>
 </Window.DataContext>

 <StackPanel Width="300">
  <TextBox x:Name="checkTextBox" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
  <TextBox />
  <Label/>
 </StackPanel>
</Window>
